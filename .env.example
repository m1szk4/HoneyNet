# ============================================
# IoT Honeynet - Environment Variables
# ============================================
# COPY THIS FILE TO .env AND FILL IN YOUR VALUES
# DO NOT COMMIT .env TO GIT!

# === General ===
COMPOSE_PROJECT_NAME=iot-honeynet
TZ=Europe/Warsaw

# === Security ===
ANON_SECRET_KEY=CHANGE_ME_TO_RANDOM_STRING_MIN_32_CHARS
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# === ClickHouse ===
CLICKHOUSE_USER=honeynet
CLICKHOUSE_PASSWORD=CHANGE_ME_CLICKHOUSE_PASSWORD
CLICKHOUSE_DB=honeynet

# === Backup (Optional - S3/MinIO) ===
S3_ENDPOINT=https://s3.example.com
S3_ACCESS_KEY=YOUR_S3_ACCESS_KEY
S3_SECRET_KEY=YOUR_S3_SECRET_KEY
S3_BUCKET=honeynet-backups

# === Alerting (Optional) ===
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK
ALERT_EMAIL=admin@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your.email@gmail.com
SMTP_PASSWORD=your-app-password

# === Network ===
HONEYPOT_SUBNET=172.20.0.0/24
MANAGEMENT_SUBNET=172.21.0.0/24

# === Resource Limits (Optional tuning) ===
SURICATA_THREADS=4
SURICATA_MEM_LIMIT=2g
CLICKHOUSE_MEM_LIMIT=3g